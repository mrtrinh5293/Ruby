<%# <h1>Students#edit</h1> %>
<%# <p>Find me in app/views/students/edit.html.erb</p> %>
<div>
    <h1>Editing <%= @student.first_name %> <%= @student.last_name %></h1>
    <% if flash[:error] %>
      <% flash[:error].each do |item| %>
        <p>*** <%= item %> ***</p>
      <% end %>
    <% end %>
    <form action="/dojos/<%= @dojo.id %>/students/<%= @student.id %>" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input type="hidden" name="_method" value="patch">

        <label for="">First Name: </label>
        <input type="text" name="student[first_name]" value="<%= @student.first_name %>">
        <p></p>
        <label for="">Last Name: </label>
        <input type="text" name="student[last_name]" value="<%= @student.last_name %>">
        <p></p>
        <label for="">Email: </label>
        <input type="text" name="student[email]" value="<%= @student.email %>">
        <p></p>
        <label for="">Dojo: </label>
        <select name="student[dojo_id]">
            <option value="<%= @dojo.id %>"><%= @dojo.branch %></option>
        </select>
        <p></p>
        <input type="submit" value="Update">
    </form>

    <a href="/">Home</a> 
    <a href="/dojos/<%= @dojo.id %>/students/<%= @student.id %>"><%= @student.first_name %></a>
</div>
