<%# <h1>Dojos#index</h1> %>
<%# <p>Find me in app/views/dojos/index.html.erb</p> %>
<div>
    <h1>Listing Dojos</h1>
    <% if flash[:success] %>
        <p><%= flash[:success] %></p>
    <% end %>
    <table>
        <thead>
            <th>Coding Dojo Branch</th>
            <th>Street</th>
            <th>City</th>
            <th>State</th>
            <th>Actions</th>
        </thead>
        <tbody>
            <% @dojos.each do |dojo| %>
            <tr>
                <td><%= dojo.branch %></td>
                <td><%= dojo.street %></td>
                <td><%= dojo.city %></td>       
                <td><%= dojo.state %></td> 
                <td>
                    <a href="/dojos/<%= dojo.id %>">Show</a> |
                    <a href="/dojos/<%= dojo.id %>/edit">Edit</a> |
                    <a href="/dojos/<%= dojo.id %>" data-method="delete">Destroy</a>
                </td>       
            </tr>
            <% end %>
        </tbody>
    </table>
    <a href="dojos/new">New Dojo</a>
</div>


